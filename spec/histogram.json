{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "description": "A simple bar chart with embedded data.",
  "data": {
    "name": "foo"
  },
  "width": 800,
  "height": 600,
  "mark": "bar",
  "title": "Stars per Day",
  "config": {
    "axis": {
      "labelFontSize": 12
    }
  },
  "encoding": {
    "x": {
      "field": "ts",
      "type": "temporal",
      "timeUnit": "yearmonthdate",
      "scale": {
        "domain": [
          { "year": 2022, "month": 12, "date": 1 },
          { "year": 2022, "month": 12, "date": 26 }
        ]
      },
      "axis": { "title": "Days" }
    },
    "y": {
      "aggregate": "count",
      "type": "quantitative",
      "axis": { "title": "Number of Stars" }
    }
  }
}
