{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "description": "A simple bar chart with embedded data.",
  "data": {
    "name": "foo",
    "url": "/final_data.json"
  },
  "mark": "circle",
  "title": "Advent of Code Timelines",
  "config": {
    "axis": {
      "grid": true,
      "labelFontSize": 12,
      "titleFontSize": 14
    }
  },
  "width": 540,
  "height": 180,
  "encoding": {
    "facet": {
      "field": "name",
      "title": null,
      "type": "nominal",
      "columns": 2,
      "sort": { "field": "stars", "order": "descending" },
      "spacing": { "row": 50, "column": 50 },
      "header": {
        "labelFontSize": 14
      }
    },
    "y": {
      "field": "level",
      "type": "ordinal",
      "title": "Level",
      "sort": "-y"
    },
    "x": { "field": "ts", "type": "temporal", "title": "Day" },
    "size": { "value": 80 },
    "color": { "field": "level", "type": "nominal" }
  },
  "resolve": { "axis": { "x": "independent", "y": "independent" } }
}
