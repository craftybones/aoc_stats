{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "description": "A simple bar chart with embedded data.",
  "data": {
    "name": "foo"
  },
  "mark": {
    "type": "bar",
    "size": 20
  },
  "title": "Advent of Code Stars",
  "config": {
    "axis": {
      "grid": true,
      "labelFontSize": 12
    }
  },
  "width": 880,
  "height": 680,
  "encoding": {
    "y": {
      "field": "name",
      "type": "nominal",
      "sort": { "field": "stars", "order": "descending" },
      "title": null
    },
    "x": {
      "field": "stars",
      "type": "quantitative",
      "title": "Stars",
      "aggregate": "max",
      "stack": null
    },
    "color": {
      "field": "level",
      "type": "nominal",
      "scale": { "scheme": "lightmulti" }
    }
  }
}
