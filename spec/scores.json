{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "description": "A simple bar chart with embedded data.",
  "data": {
    "name": "foo"
  },
  "transform": [
    {
      "aggregate": [
        {
          "op": "max",
          "field": "level",
          "as": "final_level"
        },
        {
          "op": "count",
          "field": "stars",
          "as": "final_stars"
        }
      ],
      "groupby": ["name"]
    }
  ],
  "title": "Advent of Code Stars",
  "config": {
    "axis": {
      "grid": true,
      "labelFontSize": 12
    },
    "font": "sans-serif"
  },
  "encoding": {
    "y": {
      "sort": "-x",
      "field": "name",
      "type": "nominal",
      "title": null
    },
    "x": {
      "field": "final_stars",
      "type": "quantitative",
      "title": "Stars",
      "scale": { "domain": [0, 50] }
    }
  },
  "width": 880,
  "height": { "step": 21 },
  "layer": [
    {
      "mark": {
        "type": "bar",
        "size": 20
      },
      "encoding": {
        "color": {
          "field": "final_stars",
          "type": "quantitative",
          "scale": {
            "scheme": "lightgreyteal"
          },
          "legend": {
            "title": "Stars"
          }
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": -10,
        "font": "sans-serif"
      },
      "encoding": {
        "text": { "field": "final_level", "type": "ordinal" },
        "color": {
          "condition": {
            "test": "datum['final_level'] < 10",
            "value": "white"
          },
          "value": "white"
        }
      }
    }
  ]
}
